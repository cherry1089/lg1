<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    android:transitionName="expandDetails"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B9BAB9B9"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/vehicleType1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingBottom="5dp"
                    android:text="Car"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/BrandModel1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingBottom="5dp"
                    android:text="Honda,grandi10"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/locationOfVehicle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingBottom="5dp"
                    android:text="Vijayawada"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="Fpd:"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/Cost1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="5000"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="Seater"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/seaterNo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="4"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="@string/owner"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/owner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="@string/maple"
                        android:textSize="20sp" />

                </LinearLayout>
                <TextView
                    android:id="@+id/mail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/amaranth"
                    android:paddingBottom="5dp"
                    android:text="mail.mail@gmail.com"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="@string/phone_no"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/pno11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="@string/_59532535"
                        android:textSize="15sp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/hostedImage"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_gravity="start"
                    android:src="@drawable/car" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="Rnumber"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/rno11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:fontFamily="@font/amaranth"
                        android:paddingBottom="5dp"
                        android:text="1234"
                        android:textSize="15sp" />
                </LinearLayout>





            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>